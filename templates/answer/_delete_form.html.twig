<form method="post" action="{{ path('answer_delete', {'id': answer.id}) }}" onsubmit="return confirm('{{'Are you sure you want to delete this item?'|trans}}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ answer.id) }}">
    <button class="btn btn-danger">{% trans %}Delete {% endtrans %} <i class="fas fa-trash-alt"></i> </button>
</form>
