{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ question.text }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('question_index') }}">{% trans %}Back to list{% endtrans %} <i class="fas fa-undo"></i></a>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('question_edit', {'id': question.id}) }}">{% trans %}Edit{% endtrans %} <i class="fas fa-hammer"></i></a> 
    {% endif %}

    {% if is_granted('ROLE_SUPER-ADMIN') %}
        {{ include('question/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
