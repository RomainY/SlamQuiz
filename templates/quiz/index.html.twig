{% extends 'base.html.twig' %}

{% block title %}Quiz index{% endblock %}

{% block body %}
    <h1>Quiz index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Category</th>
                <th>Summary</th>
                <th>Number_of_questions</th>
                <th>Active</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quiz in quizzes %}
            <tr>
                <td>{{ quiz.id }}</td>
                <td>{{ quiz.title }}</td>
                <td {% for category in quiz.categories %} {{category}} {% endfor %} </td>
                <td>{{ quiz.summary }}</td>
                <td>{{ quiz.numberOfQuestions }}</td>
                <td>{{ quiz.active ? 'Yes' : 'No' }}</td>
                <td>{{ quiz.createdAt ? quiz.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ quiz.updatedAt ? quiz.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('quiz_show', {'id': quiz.id}) }}">{% trans %}Show{% endtrans %}<i class="far fa-eye"></i></a>
                    <a class="btn btn-primary" href="{{ path('quiz_edit', {'id': quiz.id}) }}">{% trans %}Edit{% endtrans %}<i class="fas fa-hammer"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('quiz_new') }}">{% trans %}Create new{% endtrans %}<i class="fas fa-marker"></i></a>
{% endblock %}
