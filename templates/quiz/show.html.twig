{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <h1>Quiz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ quiz.title }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td {% for category in quiz.categories %} {{category}} {% endfor %} </td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ quiz.summary }}</td>
            </tr>
            <tr>
                <th>Number_of_questions</th>
                <td>{{ quiz.numberOfQuestions }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ quiz.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ quiz.createdAt ? quiz.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ quiz.updatedAt ? quiz.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

        <a class="btn btn-primary" href="{{ path('quiz_index') }}">{% trans %}Back to list{% endtrans %} <i class="fas fa-undo"></i></a>

    <a class="btn btn-primary" href="{{ path('quiz_edit', {'id': quiz.id}) }}">{% trans %}Edit{% endtrans %} <i class="fas fa-hammer"></i></a> 

    {{ include('quiz/_delete_form.html.twig') }}
{% endblock %}
