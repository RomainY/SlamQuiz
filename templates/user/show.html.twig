{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('user_index') }}">{% trans %}Back to list{% endtrans %} <i class="fas fa-undo"></i></a>

    {% if is_granted('ROLE_ADMIN') %}
         <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">{% trans %}Edit{% endtrans %} <i class="fas fa-hammer"></i></a> 
    {% endif %}

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
